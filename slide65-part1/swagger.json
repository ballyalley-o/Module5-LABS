"host": "localhost:3000",
"basePath": "/",
"tags": [
    {
        "name": "Calculator",
        "description": "API for Calculus in the system"
    }
],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "paths": {
       "/calculator/add": {
        "get": {
            "tags": [
                "Addition Service"
            ],
            "summary": "Add TWO numbers",
            "parameters": [
                {
                    "name": "num1",
                    "in": "query",
                "description": "the First Number"
                },
                {
                    "name": "num2",
                    "in": "query",
                "description": "the Second Number"
                }
            ],
            "responses": {
                "200": {
                        "description": "This service allows you to ADD TWO numbers together."
                    }
                }
            }
        },

         "/calculator/substract": {
        "get": {
            "tags": [
                "Substraction Service"
            ],
            "summary": "Substract TWO numbers",
            "parameters": [
                {
                    "name": "num1",
                    "in": "query",
                "description": "the First Number"
                },
                {
                    "name": "num2",
                    "in": "query",
                "description": "the Second Number"
                }
            ],
            "responses": {
                "200": {
                        "description": "This service allows you to SUBSTRACT ONE number to another."
                    }
                }
            }
        },

         "/calculator/multiply": {
        "get": {
            "tags": [
                "Multiplication Service"
            ],
            "summary": "Multiply TWO numbers",
            "parameters": [
                {
                    "name": "num1",
                    "in": "query",
                "description": "the First Number"
                },
                {
                    "name": "num2",
                    "in": "query",
                "description": "the Second Number"
                }
            ],
            "responses": {
                "200": {
                        "description": "This service allows you to MULTIPLY TWO Numbers."
                    }
                }
            }
        },

         "/calculator/divide": {
        "get": {
            "tags": [
                "Division Service"
            ],
            "summary": "Divide TWO numbers",
            "parameters": [
                {
                    "name": "num1",
                    "in": "query",
                "description": "the First Number"
                },
                {
                    "name": "num2",
                    "in": "query",
                "description": "the Second Number"
                }
            ],
            "responses": {
                "200": {
                        "description": "This service allows you to DIVIDE TWO Numbers."
                    }
                }
            }
        }
    }
}